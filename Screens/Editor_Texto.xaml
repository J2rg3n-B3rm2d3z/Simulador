                <MenuItem Header="Ejecutar">
                </MenuItem>
                <MenuItem Header="Detener">
                </MenuItem>
                <MenuItem Header="Step">
                </MenuItem>
            </Menu>
        </StackPanel>

        <Grid Margin="0,20,0,0" >
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10"/>
            <TextBox Name="txtEditor" />
        </Grid>

    </Grid>
</Page>
