            <Menu>
                <MenuItem Header="Abrir" Click="MenuItem_Click" >
                </MenuItem>
                <MenuItem Header="Cerrar" >
                </MenuItem>
                <MenuItem Header="Emsamblar" Click="MenuItem_Click_1">
