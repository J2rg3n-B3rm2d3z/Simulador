<Window x:Class="Simulador.Screens.BoxInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulador.Screens"
        mc:Ignorable="d"
        Title="Entrada de Datos" Height="150" Width="300">
    <Grid>
        <TextBox Name="txtInput" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button Content="Aceptar" Click="Aceptar_Click" Margin="10,0,10,0" />
            <Button Content="Cancelar" Click="Cancelar_Click" />
        </StackPanel>
    </Grid>
</Window>
